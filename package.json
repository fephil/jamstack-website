{
  "name": "jamstack-website",
  "version": "0.1.0",
  "description": "An opinionated workflow for building modern headless CMS websites",
  "main": "index.js",
  "scripts": {
    "clean": "del _dist",
    "dev:css": "postcss src/css/site.css -o _dist/css/site.css --watch --verbose",
    "dev:eleventy": "eleventy --serve --watch",
    "dev:js": "webpack --config webpack.config.js --watch",
    "build:eleventy": "ELEVENTY_ENV=production eleventy",
    "build:css": "NODE_ENV=production postcss src/css/site.css -o _dist/css/site.css",
    "build:js": "webpack -p --config webpack.config.js",
    "analyze:build": "webpack --profile --json > _analyze.json",
    "analyze:serve": "webpack-bundle-analyzer _analyze.json",
    "analyze": "npm-run-all clean analyze:* --print-label",
    "develop": "npm-run-all clean --parallel dev:* --print-label",
    "build": "npm-run-all clean --parallel build:* --print-label"
  },
  "repository": {
    "type": "git",
    "url": "git+https://fephil@github.com/fephil/jamstack-website.git"
  },
  "keywords": [
    "eleventy",
    "jamstack",
    "webpack",
    "tailwind"
  ],
  "author": "Phil Lennon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fephil/jamstack-website/issues"
  },
  "homepage": "https://github.com/fephil/jamstack-website#readme",
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.1.0",
    "del-cli": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "tailwindcss": "^1.6.2",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12"
  }
}
