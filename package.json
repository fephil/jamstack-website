{
  "name": "jamstack-website",
  "version": "0.4.0",
  "description": "An opinionated workflow for building modern Jamstack (static) websites",
  "main": "index.js",
  "scripts": {
    "clean": "del-cli _site",
    "dev:css": "postcss src/css/site.css -o _site/css/site.css --watch --verbose",
    "dev:eleventy": "eleventy --serve --watch",
    "dev:js": "webpack --config webpack.config.js --watch",
    "build:eleventy": "cross-env ELEVENTY_ENV=production eleventy",
    "build:css": "cross-env NODE_ENV=production postcss src/css/site.css -o _site/css/site.css",
    "build:js": "cross-env NODE_ENV=production webpack --config webpack.config.js",
    "analyze:build": "webpack --profile --json > _analyze.json",
    "analyze:serve": "webpack-bundle-analyzer _analyze.json",
    "analyze": "npm-run-all clean analyze:* --print-label",
    "develop": "npm-run-all clean --parallel dev:* --print-label",
    "build": "npm-run-all clean --parallel build:* --print-label",
    "lint": "eslint --fix src/js/**"
  },
  "repository": {
    "type": "git",
    "url": "git+https://fephil@github.com/fephil/jamstack-website.git"
  },
  "keywords": [
    "jamstack",
    "eleventy",
    "webpack",
    "tailwind",
    "babel",
    "eslint",
    "prettier",
    "postcss"
  ],
  "author": "Phil Lennon <enquiry@phil.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fephil/jamstack-website/issues"
  },
  "homepage": "https://github.com/fephil/jamstack-website#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "cssnano": "^4.1.10",
    "del-cli": "^3.0.1",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-webpack-plugin": "^2.5.3",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "postcss-nested": "^5.0.5",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.4",
    "webpack": "^5.28.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.6.0"
  }
}
